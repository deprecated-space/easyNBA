{
  "name": "EasyNBA",
  "manifest_version": 2,
  "version": "1.0.0",
  "description": "watch nba highlights in an easy way",
  "icons":
  {
    "16": "icons/icon_16.png",
    "48": "icons/icon_48.png",
    "128": "icons/icon_128.png"
  },
  "browser_action": {
    "default_title": "",
    "default_icon": {
      "19": "icons/icon_19.png",
      "38": "icons/icon_38.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["*://sports.qq.com/kbsweb/game.htm*", 
        "*://sports.qq.com/kbsweb/kbsshare/game.htm*"],
      "js": ["content-scripts/ua.js"],
      "run_at": "document_start"
    },
    {
      "matches": ["https://www.baidu.com/s?wd=nba"], 
      "js": ["content-scripts/unfold.js"],
      "run_at": "document_end"
    }
  ]
}